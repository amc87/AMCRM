<p id="notice"><%= notice %></p>

<h1>Listing Buyers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Nif</th>
      <th>Email</th>
      <th>Telephone1</th>
      <th>Telephone2</th>
      <th>Idioma</th>
      <th>Adress</th>
      <th>City</th>
      <th>Country</th>
      <th>Postal code</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= buyer.last_name %></td>
        <td><%= buyer.nif %></td>
        <td><%= buyer.email %></td>
        <td><%= buyer.telephone1 %></td>
        <td><%= buyer.telephone2 %></td>
        <td><%= buyer.idioma %></td>
        <td><%= buyer.adress %></td>
        <td><%= buyer.city %></td>
        <td><%= buyer.country %></td>
        <td><%= buyer.postal_code %></td>
        <td><%= buyer.user %></td>
        <td><%= link_to 'Show', buyer %></td>
        <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
        <td><%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

