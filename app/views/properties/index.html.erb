
<h1>Listado de Propietarios</h1>
<%= link_to "Nueva Propiedad", new_property_path, class: "btn btn-primary amc-button-margin" %>
<br>

<div class="table-responsive">

  <table class="table table-striped">
    <thead class="thead-inverse">
      <tr>
        <th>Title</th>
        <th>Subtitle</th>
        <th>Description</th>
        <th>Size</th>
        <th>Type</th>
        <th>Address</th>
        <th>City</th>
        <th>Country</th>
        <th>Operation type</th>
        <th>Extras</th>
        <th>Consultor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @properties.each do |property| %>
        <tr>
          <td><%= property.title %></td>
          <td><%= property.subtitle %></td>
          <td><%= property.description %></td>
          <td><%= property.size %></td>
          <td><%= property.type %></td>
          <td><%= property.address %></td>
          <td><%= property.city %></td>
          <td><%= property.country %></td>
          <td><%= property.operation_type %></td>
          <td><%= property.extras %></td>
          <td><%= property.user.email %></td>
          <td><%= link_to 'Show', property %></td>
          <td><%= link_to 'Edit', edit_property_path(property) %></td>
          <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div> <!-- End of table-responsive -->

<br>

<%= link_to 'New Property', new_property_path %>
