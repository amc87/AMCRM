
<h1>Listado de Propietarios</h1>
<%= link_to "Nuevo Propietario +", new_seller_path, class: "btn btn-primary amc-button-margin" %>
<br>

<div class="table-responsive">

  <table class="table table-striped">
    <thead class="thead-inverse">
      <tr>
        <th>Name</th>
        <th>Apellidos</th>
        <th>Nif</th>
        <th>Email</th>
        <th>Telephone 1</th>
        <th>Telephone 2</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sellers.each do |seller| %>
        <tr>
          <td><%= link_to seller.name, seller_path(seller) %></td>
          <td><%= link_to seller.last_name, seller_path(seller) %></td>
          <td><%= seller.nif %></td>
          <td><%= seller.email %></td>
          <td><%= seller.telephone1 %></td>
          <td><%= seller.telephone2 %></td>
          <td><%= link_to 'Editar', edit_seller_path(seller) %></td>
          <td><%= link_to 'Eliminar', seller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div> <!-- End of table-responsive -->

<br>

<%= link_to "Nuevo Propietario +", new_seller_path, class: "btn btn-primary", id: "my-id" %>
